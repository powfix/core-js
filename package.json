{
	"name": "@powfix/core-js",
	"version": "0.15.0-beta-3",
	"description": "core package",
	"author": "Kwon Kyung-Min <powfix@gmail.com>",
	"private": false,
	"repository": {
		"type": "git",
		"url": "https://github.com/powfix/core-js"
	},
	"keywords": ["javascript", "core", "util"],
	"homepage": "https://github.com/powfix/core-js",
	"license": "MIT",
	"exports": {
		"./browser": {
			"require": "./dist/browser/cjs/index.browser.js",
			"import": "./dist/browser/esm/index.browser.js",
			"default": "./dist/browser/cjs/index.browser.js",
			"types": "./dist/browser/types/index.browser.d.ts"
		},
		"./node": {
			"require": "./dist/node/cjs/index.js",
			"import": "./dist/node/esm/index.js",
			"default": "./dist/node/cjs/index.js",
			"types": "./dist/node/types/index.d.ts"
		}
	},
	"type": "module",
	"scripts": {
		"clean": "rm -rf dist | wc -l",
		"prebuild": "yarn clean",
		"build:browser": "tsc -p tsconfig.browser.cjs.json & tsc -p tsconfig.browser.esm.json & tsc -p tsconfig.browser.types.json",
		"build:node": "tsc -p tsconfig.node.cjs.json & tsc -p tsconfig.node.esm.json & tsc -p tsconfig.node.types.json",
		"build": "yarn build:browser & yarn build:node",
		"cjsfix:browser": "find ./dist/browser/cjs/ ./dist/browser/cjs -type f -name '*.js' -exec bash -c 'mv \"$0\" \"${0%.js}.cjs\"' {} \\;",
		"cjsfix:node": "find ./dist/node/cjs/ ./dist/node/cjs -type f -name '*.js' -exec bash -c 'mv \"$0\" \"${0%.js}.cjs\"' {} \\;",
		"cjsfix": "yarn cjsfix:browser & yarn cjsfix:node",
		"esmfix": "tsc-esm-fix",
		"postbuild": "yarn cjsfix && yarn esmfix",
		"deploy": "yarn deploy:patch",
		"deploy:patch": "yarn build && npm version patch && npm publish",
		"deploy:minor": "yarn build && npm version minor && npm publish",
		"deploy:major": "yarn build && npm version major && npm publish"
	},
	"files": ["dist"],
	"dependencies": {
		"base-64": "^1.0.0",
		"eventemitter3": "^5.0.1",
		"jwt-decode": "^4.0.0",
		"redis": "4.7.0",
		"uuid": "9.0.1"
	},
	"devDependencies": {
		"@types/base-64": "1.0.2",
		"@types/node": "20.9.5",
		"@types/uuid": "9.0.7",
		"axios": "^1.9.0",
		"moment": "^2.30.1",
		"sequelize": "6.37.7",
		"sequelize-typescript": "^2.1.6",
		"ts-node": "^10.9.2",
		"tsc-esm-fix": "^3.1.2",
		"typescript": "5.8.3"
	},
	"peerDependencies": {
		"moment": ">=2.0.0",
		"eventemitter3": ">=5"
	}
}
